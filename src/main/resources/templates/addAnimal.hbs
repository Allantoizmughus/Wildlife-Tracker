{{#partial "content"}}

    <div class="form">
        <center>
            <h1>Add your Record here!</h1>
            <form action="/animal/new" method="post">
                <label>Animal Species</label>
                <input type="text" name="name" required>
                <label>Animal id</label>
                <input type="number" name="id" required>
                <label>Endangered?</label>
                <input type="checkbox" name="endangered">
                <button type="submit" class="btn btn-default">Add Animal</button>
            </form>
        </center>
    </div>

    <h2>If the animal you've spotted is of endangered type, please FILL its details in the form below.</h2>

    <form action="/endangered_animal" method="post">
        <label>Select Endangered Animal</label>
        <select name="endangeredAnimalSelected">
            {{#each endangered}}
            <option value="{{name}}">{{name}}</option>
            {{/each}}
        </select>
        </br>
        <label>Animal id</label>
        <select name="id">
            {{#each endangered}}
                <option value="{{id}}">{{id}}</option>
            {{/each}}
        </select>
        </br>
        <label>Health</label>
        &emsp;<select name="health">
        <option>Sick</option>
        <option>Okay</option>
        <option>Healthy</option>
    </select>
        <br>
        <label>Age</label>
        &emsp;<select name="age">
        <option>Newborn</option>
        <option>Young</option>
        <option>Adult</option>
    </select>
        </br>
<!--        <label>Location</label>-->
<!--        &emsp;<input type="text" name="latLong">-->
<!--        </br>-->
<!--        <label>Your Name</label>-->
<!--        &emsp;<input type="text" name="rangerName">-->
<!--        <br>-->
        <button type="submit" class="btn btn-info">Submit Report</button>
    </form>

{{/partial}}
{{>layout.hbs}}